<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
  android:id            = "@+id/layout_main"
  android:layout_width  = "match_parent"
  android:layout_height = "match_parent"
  android:padding       = "32dp"
  android:gravity       = "top|fill_horizontal"
  android:orientation   = "vertical" >

  <LinearLayout
    android:id            = "@+id/layout_address"
    android:layout_width  = "match_parent"
    android:layout_height = "wrap_content"
    android:gravity       = "left|fill_horizontal"
    android:orientation   = "horizontal"
    android:paddingBottom = "16dp" >

    <EditText
      android:id            = "@+id/address"
      android:layout_height = "wrap_content"
      android:layout_width  = "0dp"
      android:layout_weight = ".75"
      android:inputType     = "text"
      android:hint          = "IP Address"
      android:text          = "192.168.0.22"
    />

    <EditText
      android:id            = "@+id/port"
      android:layout_height = "wrap_content"
      android:layout_width  = "0dp"
      android:layout_weight = ".25"
      android:inputType     = "text"
      android:hint          = "Port"
      android:text          = "5678"
    />
  </LinearLayout>

  <Switch
    android:id            = "@+id/connect_switch"
    android:layout_height = "wrap_content"
    android:layout_width  = "match_parent"
    android:text          = "Connection"
  />

  <TextView
    android:id="@+id/controllers_list"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Available Controllers"
    android:textAllCaps="true"
    android:paddingTop = "16dp"
  />

  <RadioGroup
    android:id            = "@+id/layout_controllers"
    android:layout_width  = "match_parent"
    android:layout_height = "wrap_content"
    android:gravity       = "top|fill_horizontal"
    android:orientation   = "vertical"
    android:paddingBottom = "16dp" >

    <!-- Dynamically populated with Radio Buttons -->

  </RadioGroup>

</LinearLayout>
